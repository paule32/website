session_start();
if (!function_exists('session_register')) {
     function session_register($name){
        global $$name;
        if (!isset($_SESSION[$name])) {
            $_SESSION[$name] = $$name;
          }
          $$name = &$_SESSION[$name];
     }
}
session_register("mysid");
$_SESSION['mysid'] = session_id();
